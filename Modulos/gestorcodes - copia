[[ $PROS = @(s|S|y|Y) ]] || return 1
echo ""
fun_cracklib () {
## apt-get install libpam-cracklib -y
## wget -O /etc/pam.d/common-password https://raw.githubusercontent.com/AAAAAEXQOSyIpN2JZ0ehUQ/ADM-ULTIMATE-NEW-FREE/master/Install/common-password 
