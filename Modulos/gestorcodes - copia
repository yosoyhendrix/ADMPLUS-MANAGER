tmp_arq="/tmp/arq-tmp"
if [ -d "/etc/squid" ]; then
pwd="/etc/squid/passwd"
config_="/etc/squid/squid.conf"
service_="squid"
squid_="0"
elif [ -d "/etc/squid3" ]; then
pwd="/etc/squid3/passwd"
config_="/etc/squid3/squid.conf"
service_="squid3"
squid_="1"
fi
[[ ! -e $config_ ]] && 
## echo "" && 
echo -e "\033[1;32mPROXY SQUID NO INSTALADO, NO PUEDE CONTINUAR" && 
## echo "" && 
return 0
if [ -e $pwd ]; then 
