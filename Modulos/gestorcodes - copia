echo "" && 
return 0
htpasswd -c $pwd $usrn
succes_=$(grep -c "$usrn" $pwd)
if [ "$succes_" = "0" ]; then
rm -f $pwd
echo ""
echo -e " \033[1;31mError al generar la Contraseña, no se inició la autentificación de squid!"
## echo ""
return 0
elif [[ "$succes_" = "1" ]]; then
