echo -e "\033[1;31m[\033[1;36m01\033[1;31m] \033[1;37mâ€¢ \033[1;33mACTUALIZAR SISTEMA "
echo -e "\033[1;31m[\033[1;36m02\033[1;31m] \033[1;37mâ€¢ \033[1;33mREINICIAR SERVICOS "
echo -e "\033[1;31m[\033[1;36m03\033[1;31m] \033[1;37mâ€¢ \033[1;33mREINSTALL PACOTES "
echo -e "\033[1;31m[\033[1;36m04\033[1;31m] \033[1;37mâ€¢ \033[1;33mREINICIAR SISTEMA "
echo -e "\033[1;31m[\033[1;36m05\033[1;31m] \033[1;37mâ€¢ \033[1;33mALTERAR NOME DO SISTEMA "
echo -e "\033[1;31m[\033[1;36m06\033[1;31m] \033[1;37mâ€¢ \033[1;33mALTERAR SENHA ROOT "
echo -e "\033[1;31m[\033[1;36m07\033[1;31m] \033[1;37mâ€¢ \033[1;33mTRAFEGO DE RED \033[1;31m(nlod)" 
echo -e "\033[1;31m[\033[1;36m08\033[1;31m] \033[1;37mâ€¢ \033[1;33mPROCESOS DE SISTEMA \033[1;31m(htop)" 
echo -e "\033[1;31m[\033[1;36m09\033[1;31m] \033[1;37mâ€¢ \033[1;33mMONITOR DO SISTEMA \033[1;31m(glances) "
echo -e "\033[1;31m[\033[1;36m10\033[1;31m] \033[1;37mâ€¢ \033[1;33mRESET IPTABLES "
