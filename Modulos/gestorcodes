   6 | 06)
   clear
   senharoot
   ;;
   7 | 07)
   clear
   echo -e "\033[1;32mPARA SALIR HAGA CLIC EN CTRL + C\033[1;36m"
   # echo -e "\033[1;32mPARA SALIR HAGA CLIC EN LA LETRA \033[1;36mq\033[1;36m"
   sleep 3
   [[ $(dpkg --get-selections|grep -w "nload"|head -1) ]] || apt-get install nload -y &>/dev/null
